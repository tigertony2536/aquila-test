{
  "name": "@repo/database",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:seed": "ts-node src/seed.ts",
    "dev": "tsup src/* --watch",
    "format": "prisma format",
    "generate": "dotenv -e .env.local -- prisma generate",
    "lint": "eslint . --ext *.js,.ts",
    "prebuild": "pnpm install --production=false && pnpm run build && npm prune --production",
    "build": "pnpm run prebuild && pnpm run generate && tsup",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.13",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "prisma": "^5.13.0",
    "rimraf": "^5.0.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "seed": "ts-node src/seed.ts"
  }
}
